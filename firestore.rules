rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'berrojalbizjulieta@gmail.com';
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    match /professionalsDetails/{profId} {
      allow read: if true;
      allow create: if request.auth.uid == profId || isAdmin();
      allow delete: if request.auth.uid == profId || isAdmin();

      allow update: if
        // Regla 1: dueño o admin
        (request.auth.uid == profId || isAdmin()) ||

        // Regla 2: permitir SOLO modificar whatsappClicks aun anónimo
        (
          request.resource.data
            .diff(resource.data)
            .affectedKeys()
            .hasOnly(['whatsappClicks'])
        );
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    match /adBanners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /jobRequests/{jobId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientId;
      allow update, delete: if (request.auth != null && request.auth.uid == resource.data.clientId) || isAdmin();
    }
  
    match /analytics/{docId} {
      allow read: if isAdmin();
      allow write: if true;
    }
  }
}